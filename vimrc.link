runtime bundle/pathogen/autoload/pathogen.vim
call pathogen#infect()
syntax on
set encoding=utf-8
set autoindent
set nowrap
set softtabstop=4
set shiftwidth=2
set tabstop=4
set expandtab
set nosmarttab
" set textwidth=78
set colorcolumn=80

" ----------
" UI
" ----------
set ruler
set number
set listchars=tab:▸\ ,eol:¬
colorscheme blackboard

" ---------
" Filetype specific fun
" ---------
autocmd FileType make setlocal noexpandtab " Use tabs in makefiles
