runtime bundle/pathogen/autoload/pathogen.vim
call pathogen#infect()
syntax on
filetype on
set encoding=utf-8
set autoindent
set nowrap
set softtabstop=4
set shiftwidth=4
set tabstop=4
set expandtab
set nosmarttab
set colorcolumn=80
set autoindent

" ----------
" UI
" ----------
set ruler
set number
set listchars=tab:▸\ ,eol:¬
colorscheme blackboard

" ---------
" Filetype specific fun
" ---------
if has('autocmd')
    autocmd FileType make setlocal noexpandtab " Use tabs in makefiles
endif
